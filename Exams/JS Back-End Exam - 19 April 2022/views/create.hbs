<section id="create-section">
    <h1 class="item">New Auction</h1>
    <div class="item padded align-center">
        <form class="layout left large" method="post" action="/create">
            <div class="col aligned">
                <label>
                    <span>Title</span>
                    <input type="text" name="title" value="{{auction.title}}"></label>
                <label>
                    <span>Category</span>
                    <select name="category">
                        <option value="estate" {{#if auction.isEstate}}selected{{/if}}>Real Estate</option>
                        <option value="vehicles" {{#if auction.isVehicles}}selected{{/if}}>Vehicles</option>
                        <option value="furniture" {{#if auction.isFurniture}}selected{{/if}}>Furniture</option>
                        <option value="electronics" {{#if auction.isElectronics}}selected{{/if}}>Electronics</option>
                        <option value="other" {{#if auction.isOther}}selected{{/if}}>Other</option>
                    </select>
                </label>
                <label>
                    <span>Image URL</span>
                    <input type="text" name="image" value="{{auction.image}}"></label>
                <label>
                    <span>Starting price</span>
                    <input type="number" name="price" value="{{auction.price}}"></label>
            </div>
            <div class="content pad-med align-center vertical">
                <label>
                    <span>Description</span>
                    <textarea name="description">{{auction.description}}</textarea>
                </label>
                <div class="align-center">
                    <input class="action" type="submit" value="Publish Item">
                </div>
            </div>
        </form>
    </div>
</section>