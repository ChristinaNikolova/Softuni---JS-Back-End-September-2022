<li class="item">
    <header class="pad-med">
        <h2>{{title}}</h2>
    </header>
    <div class="align-center">
        <img class="img-thumb" src="{{image}}">
    </div>
    <footer class="align-center pad-med">
        {{#if isClosed}}
        <p>Closing price: <strong>${{price}}</strong></p>
        from {{currentWinnerFullName}}
        {{else}}
        <p>Current price: <strong>${{price}}</strong></p>
        <a class="action" href="/auctions/{{_id}}">See details</a>
        {{/if}}
    </footer>
</li>