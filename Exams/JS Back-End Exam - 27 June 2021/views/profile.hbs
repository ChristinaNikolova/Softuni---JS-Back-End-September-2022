<section class="profile col-md-6 text-center col-lg" id="profile-page">
    <div class="profile-container">
        {{#if isMale}}
        <img class="profile-img" src="/static/images/male.png">
        {{else}}
        <img class="profile-img" src="/static/images/female.png">
        {{/if}}
        <p>Email: <span>{{user.email}}</span></p>
    </div>
    <div class="profile-info">
        <p>Trips History: <span>{{trips.length}}</span> counts</p>
        <div class="trips-info">
            {{#each trips}}
            {{> profile}}
            {{else}}
            <p>there are no offer trips yet...</p>
            {{/each}}
        </div>
    </div>
</section>