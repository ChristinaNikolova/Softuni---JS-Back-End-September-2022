<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form action="/edit/{{crypto._id}}" method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{crypto.name}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" value="{{crypto.image}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{crypto.price}}">
            <label>Description:</label>
            <textarea name="description" id="description">{{crypto.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="payment">
                <option value="crypto-wallet" {{#if crypto.isWallet}}selected{{/if}}>Crypto Wallet</option>
                <option value="credit-card" {{#if crypto.isCredit}}selected{{/if}}>Credit Card</option>
                <option value="debit-card" {{#if crypto.isDebit}}selected{{/if}}>Debit Card</option>
                <option value="paypal" {{#if crypto.isPaypal}}selected{{/if}}>PayPal</option>
            </select>
            <input type="submit" id="btn" value="EDIT"></input>
        </form>
    </div>
</section>